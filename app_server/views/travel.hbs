<!-- Page Header -->
<section class="page-header bg-light py-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <h1 class="display-5 fw-bold">{{pageHeader.title}}</h1>
                <p class="lead text-muted">{{pageHeader.strapline}}</p>
            </div>
        </div>
    </div>
</section>

<!-- Main Content -->
<section class="packages-section py-5">
    <div class="container">
        <div class="row">
            <!-- Travel Packages -->
            <div class="col-lg-8">
                <div class="row g-4">
                    {{#each trips}}
                    <div class="col-lg-6">
                        <div class="package-card card h-100 shadow-sm">
                            <img src="{{image}}" class="card-img-top" alt="{{name}}" 
                                 style="height: 200px; object-fit: cover;">
                            
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title fw-bold">{{name}}</h5>
                                
                                <div class="package-meta mb-3">
                                    <span class="badge bg-secondary me-2">
                                        <i class="fas fa-map-marker-alt me-1"></i>{{location}}
                                    </span>
                                    <span class="badge bg-info">
                                        <i class="fas fa-clock me-1"></i>{{duration}}
                                    </span>
                                </div>
                                
                                <p class="card-text text-muted flex-grow-1">{{description}}</p>
                                
                                <div class="package-rating mb-3">
                                    {{#each (Array rating)}}
                                    <i class="fas fa-star text-warning"></i>
                                    {{/each}}
                                    <small class="text-muted ms-2">({{rating}}/5 stars)</small>
                                </div>
                                
                                <div class="package-footer mt-auto">
                                    <div class="d-flex justify-content-between align-items-center mb-3">
                                        <span class="h4 text-primary mb-0">{{formatPrice price}}</span>
                                        <small class="text-muted">per person</small>
                                    </div>
                                    
                                    <div class="d-grid">
                                        <button class="btn btn-primary">
                                            <i class="fas fa-info-circle me-2"></i>View Details
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    {{/each}}
                </div>
                
                <!-- Pagination -->
                <nav class="mt-5" aria-label="Package pagination">
                    <ul class="pagination justify-content-center">
                        <li class="page-item disabled">
                            <a class="page-link" href="#">Previous</a>
                        </li>
                        <li class="page-item active">
                            <a class="page-link" href="#">1</a>
                        </li>
                        <li class="page-item">
                            <a class="page-link" href="#">2</a>
                        </li>
                        <li class="page-item">
                            <a class="page-link" href="#">3</a>
                        </li>
                        <li class="page-item">
                            <a class="page-link" href="#">Next</a>
                        </li>
                    </ul>
                </nav>
            </div>
            
            <!-- Sidebar -->
            <div class="col-lg-4">
                <!-- Help Card -->
                <div class="card bg-light mb-4">
                    <div class="card-body text-center">
                        <h5 class="card-title">{{sidebar.title}}</h5>
                        <p class="card-text">{{sidebar.content}}</p>
                        <a href="/traveler/contact" class="btn btn-outline-primary">
                            <i class="fas fa-headset me-2"></i>{{sidebar.buttonText}}
                        </a>
                    </div>
                </div>
                
                <!-- Filter Card -->
                <div class="card">
                    <div class="card-header">
                        <h6 class="mb-0"><i class="fas fa-filter me-2"></i>Filter Packages</h6>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label for="priceRange" class="form-label">Price Range</label>
                            <select class="form-select" id="priceRange">
                                <option>All Prices</option>
                                <option>Under $2,000</option>
                                <option>$2,000 - $3,500</option>
                                <option>$3,500+</option>
                            </select>
                        </div>
                        
                        <div class="mb-3">
                            <label for="duration" class="form-label">Duration</label>
                            <select class="form-select" id="duration">
                                <option>Any Duration</option>
                                <option>1-7 days</option>
                                <option>8-14 days</option>
                                <option>15+ days</option>
                            </select>
                        </div>
                        
                        <div class="mb-3">
                            <label for="destination" class="form-label">Destination Type</label>
                            <select class="form-select" id="destination">
                                <option>All Destinations</option>
                                <option>Beach</option>
                                <option>Mountain</option>
                                <option>City</option>
                                <option>Safari</option>
                            </select>
                        </div>
                        
                        <button class="btn btn-primary w-100">
                            <i class="fas fa-search me-2"></i>Apply Filters
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

